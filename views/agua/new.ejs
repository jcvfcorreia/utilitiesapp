<% include ../partials/header %>
<div class="container">
    <form action="/agua/new" method="POST" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="valor">Valor</label>
            <div class="col-sm-5">
                <input class="form-control" type="number" name="valor" id="valor">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="data">Data</label>
            <div class="col-sm-5">
                <input class="form-control" type="date" name="data" id="data">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" class="btn btn-success">Save</button>            
                <a href="/agua" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>

